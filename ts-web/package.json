{
  "name": "typescript-react-redux-boilerplate",
  "version": "1.0.0",
  "private": true,
  "description": "A frontend boilerplate with React, Redux and Typescript",
  "main": "index.js",
  "scripts": {
    "lint": "node_modules/.bin/tslint -p tslint.json 'src/**/*.ts'",
    "test": "node_modules/.bin/jest",
    "start": "webpack-dev-server --debug --devtool cheap-module-source-map --output-pathinfo --history-api-fallback --hot --inline --progress --colors --port 3000 --host 0.0.0.0",
    "build": "webpack -p --progress --colors"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/classnames": "2.2.0",
    "@types/history": "4.6.0",
    "@types/jest": "^20.0.8",
    "@types/node": "8.0.7",
    "@types/react": "15.0.34",
    "@types/react-dom": "15.5.1",
    "@types/react-intl": "^2.3.18",
    "@types/react-redux": "4.4.45",
    "@types/react-router": "4.0.14",
    "@types/redux-actions": "1.2.6",
    "@types/webpack": "3.0.1",
    "@types/webpack-env": "^1.15.2",
    "awesome-typescript-loader": "^3.5.0",
    "css-loader": "^0.28.11",
    "enzyme": "^2.9.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "postcss": "^6.0.23",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-import": "^10.0.0",
    "postcss-loader": "^2.1.6",
    "postcss-reporter": "^4.0.0",
    "postcss-url": "^7.3.2",
    "react-hot-loader": "^1.3.1",
    "react-test-renderer": "^15.6.2",
    "style-loader": "^0.18.2",
    "tslint": "^5.20.1",
    "typescript": "^2.9.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.5"
  },
  "dependencies": {
    "@types/tapable": "^0.2.5",
    "auth0-js": "^8.12.3",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "immutable": "^3.8.2",
    "react": "^15.6.2",
    "react-contenteditable": "^2.0.4",
    "react-dom": "^15.6.2",
    "react-intl": "^2.9.0",
    "react-redux": "^5.1.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "redux": "^3.7.2",
    "redux-actions": "^2.6.5",
    "redux-saga": "^0.15.6"
  },
  "jest": {
    "browser": true,
    "collectCoverage": true,
    "rootDir": ".",
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/tests/**/*.ts?(x)",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/test_preprocessor.js"
    }
  }
}
